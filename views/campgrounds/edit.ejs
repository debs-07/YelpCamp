<% layout('layout/boilerplate')%> 

    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3">
            
            <form action="/campgrounds/<%=result._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="campground[title]" value="<%= result.title %>" required>
            <div class="valid-feedback">looks good!</div>
        </div>
        <div class="mb-3">
            <label  class="form-label" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="campground[location]" value="<%=result.location%>" required>
            <div class="valid-feedback">looks good!</div>
        </div>
        <!-- <div class="mb-3">
            <label  class="form-label" for="image">add images</label>
            <input type="file" name="image" id="image" multiple>
        </div> -->
        <div class="mb-3">
            <label  class="form-label" for="price">Price</label>
            <div class="input-group mb-3">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]" value="<%=result.price%>" required>
                <div class="valid-feedback">looks good!</div>
              </div>
            </div>
            <div class="input-group mb-3">
                <input type="file" class="form-control" id="image" name="image" multiple>
                <label class="input-group-text" for="image">Upload</label>
              </div>
    
        <div class="mb-3">
            <label  class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" id="description" name="campground[description]" required><%=result.description%></textarea>
            <div class="valid-feedback">looks good!</div>
        </div>
        <div class="mb-3">
            <% result.images.forEach(function(img,i){%> 
                <img src="<%=img.thumbnail%> " class="img-thumbnail" alt="">
                <!-- thumbnail is just modified url -->
                <div class="form-check-inline">
                    <input type="checkbox"  id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>">Delete</label>
                <% }) %> 
        </div>
        <div class="mb-3">
            <button class="btn btn-info">Update Campground</button>
        </div>
            </form>
    
            <footer>
                <a href="/campgrounds/<%=result._id%> ">Back To Campground</a>
            </footer>
        </div>
    </div>
    